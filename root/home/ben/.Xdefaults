! Remember that .Xdefaults comments start with ! not #

! urxvt color scheme
! ------------------------
urxvt*foreground: #f2f2f2
urxvt*background: #101010


! The first color is normal, the second color is bright
! ------------------------------------------------------
! black
urxvt*color0  : #2E3436
urxvt*color8  : #555753
! red
urxvt*color1  : #CC0000
urxvt*color9  : #EF2929
! green
urxvt*color2  : #4E9A06
urxvt*color10 : #8AE234
! yellow
urxvt*color3  : #C4A000
urxvt*color11 : #FCE94F
! blue
urxvt*color4  : #3465A4
urxvt*color12 : #729FCF
! magenta
urxvt*color5  : #75507B
urxvt*color13 : #AD7FA8
! cyan
urxvt*color6  : #06989A
urxvt*color14 : #34E2E2
! white
urxvt*color7  : #D3D7CF
urxvt*color15 : #EEEEEC


! implement clickable URLs inside terminal
! ------------------------------------------

urxvt*perl-ext-common: default,matcher
urxvt*urlLauncher: /usr/bin/firefox
urxvt*matcher.button: 1
urxvt*colorUL: #86a2be


! Default font
! ------------------------
urxvt*font: xft:Droid Sans Mono Slashed:pixelsize=12:antialias:true:hinting:true


! Adjust font size
! Ctrl-0  -  normal
! Ctrl-minus - small
! Ctrl-equals - large
! -------------------------------------------
urxvt.keysym.C-0: command:\033]710;xft:Droid Sans Mono Slashed:pixelsize=12:antialias:true:hinting:true\007
urxvt.keysym.C-minus: command:\033]710;xft:Droid Sans Mono Slashed:pixelsize=10:antialias:true:hinting:true\007
urxvt.keysym.C-equal: command:\033]710;xft:Droid Sans Mono Slashed:pixelsize=14:antialias:true:hinting:true\007


! Other options
! -------------------------------
urxvt*scrollBar: true
urxvt*scrollstyle: plain
urxvt*saveLines: 65535
urxvt*depth: 32
urvxt*cursorBlink: true
!urxvt*internalBorder: 6


! Xterm Configuration
! ----------------------
xterm*Foreground: white
xterm*Background: black
xterm*scrollBar: false
